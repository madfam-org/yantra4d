  "parameter_groups": [
    { "id": "vise", "label": { "en": "Vise", "es": "Prensa" } },
    { "id": "jaw", "label": { "en": "Jaw", "es": "Mordaza" } },
    { "id": "guide", "label": { "en": "Drill Guide", "es": "Guía de Taladro" } },
    { "id": "quality", "label": { "en": "Quality", "es": "Calidad" } }
