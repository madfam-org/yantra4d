---
import type { Translations } from '../lib/i18n';

interface Props {
  t?: Translations;
}

const { t } = Astro.props;
---

<section class="py-24 px-6 bg-secondary/30">
  <div class="mx-auto max-w-5xl">
    <h2 class="mb-12 text-center text-3xl font-bold tracking-tight sm:text-4xl">{t ? t.howItWorks.heading : 'Cómo Funciona'}</h2>

    <div class="grid gap-12 md:grid-cols-2">
      <!-- Maker Track -->
      <div>
        <h3 class="mb-6 text-center text-lg font-semibold text-primary">{t ? t.howItWorks.makerTrack.label : 'Para Makers'}</h3>
        <div class="space-y-6">
          <div class="flex gap-4">
            <div class="flex-shrink-0 flex h-10 w-10 items-center justify-center rounded-full bg-primary text-sm font-bold text-primary-foreground">1</div>
            <div>
              <h4 class="font-semibold">{t ? t.howItWorks.makerTrack.step1.title : 'Explora'}</h4>
              <p class="text-sm text-muted-foreground">{t ? t.howItWorks.makerTrack.step1.desc : 'Elige un proyecto de la galería o sigue un enlace compartido.'}</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="flex-shrink-0 flex h-10 w-10 items-center justify-center rounded-full bg-primary text-sm font-bold text-primary-foreground">2</div>
            <div>
              <h4 class="font-semibold">{t ? t.howItWorks.makerTrack.step2.title : 'Personaliza'}</h4>
              <p class="text-sm text-muted-foreground">{t ? t.howItWorks.makerTrack.step2.desc : 'Ajusta dimensiones con deslizadores y botones. Ve los cambios en 3D en tiempo real.'}</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="flex-shrink-0 flex h-10 w-10 items-center justify-center rounded-full bg-primary text-sm font-bold text-primary-foreground">3</div>
            <div>
              <h4 class="font-semibold">{t ? t.howItWorks.makerTrack.step3.title : 'Exporta e Imprime'}</h4>
              <p class="text-sm text-muted-foreground">{t ? t.howItWorks.makerTrack.step3.desc : 'Descarga tu STL y envíalo a tu slicer. Listo.'}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Creator Track -->
      <div>
        <h3 class="mb-6 text-center text-lg font-semibold text-primary">{t ? t.howItWorks.creatorTrack.label : 'Para Creadores'}</h3>
        <div class="space-y-6">
          <div class="flex gap-4">
            <div class="flex-shrink-0 flex h-10 w-10 items-center justify-center rounded-full bg-primary text-sm font-bold text-primary-foreground">1</div>
            <div>
              <h4 class="font-semibold">{t ? t.howItWorks.creatorTrack.step1.title : 'Sube .scad'}</h4>
              <p class="text-sm text-muted-foreground">{t ? t.howItWorks.creatorTrack.step1.desc : 'Arrastra tus archivos fuente de OpenSCAD a Qubic.'}</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="flex-shrink-0 flex h-10 w-10 items-center justify-center rounded-full bg-primary text-sm font-bold text-primary-foreground">2</div>
            <div>
              <h4 class="font-semibold">{t ? t.howItWorks.creatorTrack.step2.title : 'Configura'}</h4>
              <p class="text-sm text-muted-foreground">{t ? t.howItWorks.creatorTrack.step2.desc : 'Edita el manifiesto — parámetros, modos, preajustes, pasos de ensamblaje.'}</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="flex-shrink-0 flex h-10 w-10 items-center justify-center rounded-full bg-primary text-sm font-bold text-primary-foreground">3</div>
            <div>
              <h4 class="font-semibold">{t ? t.howItWorks.creatorTrack.step3.title : 'Comparte'}</h4>
              <p class="text-sm text-muted-foreground">{t ? t.howItWorks.creatorTrack.step3.desc : 'Obtén un enlace. Cualquiera puede personalizar y exportar tu diseño.'}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
