  "constraints": [
    {
      "parameter": "wall_thickness",
      "condition": ">=",
      "value": 0.8,
      "severity": "error",
      "message": {
        "en": "Wall thickness must be at least 0.8mm for printability",
        "es": "El grosor de pared debe ser al menos 0.8mm para impresión"
      }
