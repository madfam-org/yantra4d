{
  "project": {
    "name": "Julia Vase",
    "slug": "julia-vase",
    "version": "1.0.0",
    "description": "Parametric twisted vase with sinusoidal profile modulation inspired by Julia set fractals. Generates decorative vases with configurable twist, wave patterns, and wall thickness.",
    "tags": ["vase", "art", "fractal", "decorative"],
    "license": "CC-BY-SA-4.0"
  },
  "modes": [
    {
      "slug": "vase",
      "label": { "en": "Vase", "es": "Jarrón" },
      "scad_file": "qubic_vase.scad",
      "render_mode": 0,
      "parts": ["vase"]
    }
  ],
  "parts": [
    {
      "id": "vase",
      "label": { "en": "Vase", "es": "Jarrón" },
      "render_mode": 0,
      "color": "#8b5cf6"
    }
  ],
  "parameters": [
    {
      "name": "height",
      "type": "slider",
      "label": { "en": "Height", "es": "Altura" },
      "default": 150,
      "min": 50,
      "max": 300,
      "step": 5,
      "group": "dimensions",
      "modes": ["vase"]
    },
    {
      "name": "base_radius",
      "type": "slider",
      "label": { "en": "Base Radius", "es": "Radio Base" },
      "default": 40,
      "min": 15,
      "max": 80,
      "step": 1,
      "group": "dimensions",
      "modes": ["vase"]
    },
    {
      "name": "twist_angle",
      "type": "slider",
      "label": { "en": "Twist Angle", "es": "Ángulo de Torsión" },
      "default": 360,
      "min": 0,
      "max": 720,
      "step": 15,
      "group": "style",
      "modes": ["vase"]
    },
    {
      "name": "wave_frequency",
      "type": "slider",
      "label": { "en": "Wave Frequency", "es": "Frecuencia de Onda" },
      "default": 5,
      "min": 1,
      "max": 12,
      "step": 1,
      "group": "style",
      "modes": ["vase"]
    },
    {
      "name": "wave_amplitude",
      "type": "slider",
      "label": { "en": "Wave Amplitude", "es": "Amplitud de Onda" },
      "default": 10,
      "min": 0,
      "max": 25,
      "step": 1,
      "group": "style",
      "modes": ["vase"]
    },
    {
      "name": "wall_thickness",
      "type": "slider",
      "label": { "en": "Wall Thickness", "es": "Grosor de Pared" },
      "default": 2,
      "min": 0.8,
      "max": 4,
      "step": 0.2,
      "group": "dimensions",
      "modes": ["vase"]
    },
    {
      "name": "fn",
      "type": "slider",
      "label": { "en": "Resolution ($fn)", "es": "Resolución ($fn)" },
      "default": 64,
      "min": 0,
      "max": 128,
      "step": 8,
      "group": "quality",
      "modes": ["vase"]
    },
    {
      "name": "resolution",
      "type": "slider",
      "label": { "en": "Layer Resolution", "es": "Resolución de Capas" },
      "default": 100,
      "min": 20,
      "max": 200,
      "step": 10,
      "group": "quality",
      "advanced": true,
      "modes": ["vase"]
    }
  ],
  "parameter_groups": [
    {
      "id": "dimensions",
      "label": { "en": "Dimensions", "es": "Dimensiones" }
    },
    {
      "id": "style",
      "label": { "en": "Style", "es": "Estilo" }
    },
    {
      "id": "quality",
      "label": { "en": "Quality", "es": "Calidad" }
    }
  ],
  "presets": [
    {
      "slug": "smooth_cylinder",
      "label": { "en": "Smooth Cylinder", "es": "Cilindro Liso" },
      "values": {
        "twist_angle": 0,
        "wave_amplitude": 0
      }
    },
    {
      "slug": "twisted_spiral",
      "label": { "en": "Twisted Spiral", "es": "Espiral Torcida" },
      "values": {
        "twist_angle": 360,
        "wave_amplitude": 5
      }
    },
    {
      "slug": "ripple_vase",
      "label": { "en": "Ripple Vase", "es": "Jarrón Ondulado" },
      "values": {
        "twist_angle": 90,
        "wave_frequency": 8,
        "wave_amplitude": 15
      }
    },
    {
      "slug": "fractal_complex",
      "label": { "en": "Fractal Complex", "es": "Fractal Complejo" },
      "values": {
        "twist_angle": 540,
        "wave_frequency": 6,
        "wave_amplitude": 12
      }
    }
  ],
  "constraints": [
    {
      "parameter": "wall_thickness",
      "condition": ">=",
      "value": 0.8,
      "severity": "error",
      "message": {
        "en": "Wall thickness must be at least 0.8mm for printability",
        "es": "El grosor de pared debe ser al menos 0.8mm para impresión"
      }
    },
    {
      "parameter": "wave_amplitude",
      "condition": "<",
      "reference": "base_radius",
      "factor": 0.333,
      "severity": "warning",
      "message": {
        "en": "Wave amplitude should be less than 1/3 of base radius to avoid self-intersection",
        "es": "La amplitud de onda debe ser menor a 1/3 del radio base para evitar auto-intersección"
      }
    }
  ],
  "camera_views": {
    "iso": [100, 100, 100],
    "top": [0, 0, 250],
    "front": [0, -200, 75],
    "right": [200, 0, 75]
  },
  "export_formats": ["stl", "3mf"],
  "estimate_constants": {
    "base_time": 10,
    "per_unit": 2,
    "per_part": 10,
    "fn_factor": 128,
    "wasm_multiplier": 5,
    "warning_threshold_seconds": 120
  }
}
