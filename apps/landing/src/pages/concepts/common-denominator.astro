---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getTranslations } from '../../lib/i18n';

const lang = Astro.currentLocale || 'es';
const t = getTranslations(lang);
---

<BaseLayout
  lang={lang}
  t={t}
  title={t.concepts.cdg.title + " | Yantra4D"}
  description={t.concepts.cdg.description}
>
  <Header lang={lang} t={t} />
  
  <main class="pt-20">
    <section class="relative min-h-[60vh] flex items-center justify-center px-6 overflow-hidden">
      <div class="absolute inset-0 -z-10 bg-gradient-to-b from-background via-background to-blue-900/10"></div>
      
      <!-- Placeholder for 3D Background Element -->
      <div class="absolute inset-0 -z-20 opacity-30">
        <div class="w-full h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-blue-500/20 via-transparent to-transparent"></div>
      </div>

      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-cyan-300 mb-6">
          {t.concepts.cdg.heroTitle}
        </h1>
        <p class="text-xl md:text-2xl text-muted-foreground max-w-2xl mx-auto leading-relaxed">
          {t.concepts.cdg.heroSubtitle}
        </p>
      </div>
    </section>

    <section class="max-w-5xl mx-auto px-6 py-24 space-y-24">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="space-y-6">
          <h2 class="text-3xl font-bold">{t.concepts.cdg.section1Title}</h2>
          <p class="text-lg text-muted-foreground">
            {t.concepts.cdg.section1Body}
          </p>
          <ul class="space-y-3 pt-4">
            <li class="flex items-center gap-3">
              <span class="text-primary text-xl">✓</span>
              <span>{t.concepts.cdg.gridfinity}</span>
            </li>
            <li class="flex items-center gap-3">
              <span class="text-primary text-xl">✓</span>
              <span>{t.concepts.cdg.fasteners}</span>
            </li>
            <li class="flex items-center gap-3">
              <span class="text-primary text-xl">✓</span>
              <span>{t.concepts.cdg.tolerances}</span>
            </li>
          </ul>
        </div>
        <div class="bg-card border border-border rounded-xl p-2 aspect-square flex items-center justify-center bg-gradient-to-br from-card to-secondary/30">
          <span class="text-muted-foreground italic">[Interactive CDG Visualization Placeholder]</span>
        </div>
      </div>

      <div class="grid md:grid-cols-2 gap-12 items-center md:flex-row-reverse">
        <div class="order-last md:order-first bg-card border border-border rounded-xl p-2 aspect-video flex items-center justify-center bg-gradient-to-bl from-card to-primary/10">
          <span class="text-muted-foreground italic">[Exploded View Animation Placeholder]</span>
        </div>
        <div class="space-y-6">
          <h2 class="text-3xl font-bold">{t.concepts.cdg.remixTitle}</h2>
          <p class="text-lg text-muted-foreground">
            {t.concepts.cdg.remixBody}
          </p>
        </div>
      </div>
    </section>
  </main>

  <Footer t={t} />
</BaseLayout>
