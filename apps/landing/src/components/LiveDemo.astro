---
import DemoViewer from './DemoViewer';
---

<section id="demo" class="py-24 px-6">
  <div class="mx-auto max-w-4xl">
    <h2 class="mb-4 text-center text-3xl font-bold tracking-tight sm:text-4xl">Live Demo</h2>
    <p class="mb-8 text-center text-muted-foreground">
      Interact with pre-rendered 3D models. Orbit, zoom, and pan to explore each project.
    </p>
    <div class="overflow-hidden rounded-xl border border-border bg-card">
      <DemoViewer client:visible />
    </div>
  </div>
</section>
