{
  "project": {
    "name": "Tablaco Studio",
    "slug": "tablaco",
    "version": "1.0.0"
  },
  "modes": [
    {
      "id": "unit",
      "scad_file": "half_cube.scad",
      "label": { "en": "Unit", "es": "Unidad" },
      "parts": ["main"],
      "estimate": { "base_units": 1, "formula": "constant" }
    },
    {
      "id": "assembly",
      "scad_file": "assembly.scad",
      "label": { "en": "Assembly", "es": "Ensamble" },
      "parts": ["bottom", "top"],
      "estimate": { "base_units": 2, "formula": "constant" }
    },
    {
      "id": "grid",
      "scad_file": "tablaco.scad",
      "label": { "en": "Grid", "es": "Retícula" },
      "parts": ["bottom", "top", "rods", "stoppers"],
      "estimate": { "base_units": "rows*cols", "formula": "grid" }
    }
  ],
  "parts": [
    { "id": "main", "render_mode": 0, "label": { "en": "Color", "es": "Color" }, "default_color": "#e5e7eb" },
    { "id": "bottom", "render_mode": 1, "label": { "en": "Bottom Unit", "es": "Unidad Inferior" }, "default_color": "#ffffff" },
    { "id": "top", "render_mode": 2, "label": { "en": "Top Unit", "es": "Unidad Superior" }, "default_color": "#000000" },
    { "id": "rods", "render_mode": 3, "label": { "en": "Rods", "es": "Varillas" }, "default_color": "#808080" },
    { "id": "stoppers", "render_mode": 4, "label": { "en": "Stoppers", "es": "Topes" }, "default_color": "#ffd700" }
  ],
  "parameters": [
    {
      "id": "size",
      "type": "slider",
      "default": 20.0,
      "min": 10,
      "max": 50,
      "step": 0.5,
      "label": { "en": "Size (mm)", "es": "Tamaño (mm)" },
      "tooltip": { "en": "Width/height of each unit cube in millimeters", "es": "Ancho/alto de cada cubo unitario en milímetros" },
      "visible_in_modes": ["unit", "assembly"]
    },
    {
      "id": "thick",
      "type": "slider",
      "default": 2.5,
      "min": 1,
      "max": 10,
      "step": 0.1,
      "label": { "en": "Thickness (mm)", "es": "Grosor (mm)" },
      "tooltip": { "en": "Wall thickness of the cube", "es": "Grosor de las paredes del cubo" },
      "visible_in_modes": ["unit", "assembly"]
    },
    {
      "id": "rod_D",
      "type": "slider",
      "default": 3.0,
      "min": 2,
      "max": 10,
      "step": 0.1,
      "label": { "en": "Rod Diameter (mm)", "es": "Diámetro Varilla (mm)" },
      "tooltip": { "en": "Diameter of connecting rods", "es": "Diámetro de las varillas de conexión" },
      "visible_in_modes": ["unit", "assembly"]
    },
    {
      "id": "show_base",
      "type": "checkbox",
      "default": true,
      "label": { "en": "Base", "es": "Base" },
      "tooltip": { "en": "Show or hide the base plate", "es": "Mostrar u ocultar la placa base" },
      "group": "visibility",
      "visible_in_modes": ["unit", "assembly"]
    },
    {
      "id": "show_walls",
      "type": "checkbox",
      "default": true,
      "label": { "en": "Walls", "es": "Paredes" },
      "tooltip": { "en": "Show or hide the side walls", "es": "Mostrar u ocultar las paredes laterales" },
      "group": "visibility",
      "visible_in_modes": ["unit", "assembly"]
    },
    {
      "id": "show_mech",
      "type": "checkbox",
      "default": true,
      "label": { "en": "Mechanism", "es": "Mecanismo" },
      "tooltip": { "en": "Show or hide the interlocking mechanism", "es": "Mostrar u ocultar el mecanismo de enclavamiento" },
      "group": "visibility",
      "visible_in_modes": ["unit", "assembly"]
    },
    {
      "id": "rows",
      "type": "slider",
      "default": 8,
      "min": 1,
      "max": 20,
      "step": 1,
      "label": { "en": "Rows", "es": "Filas" },
      "tooltip": { "en": "Number of rows in the grid", "es": "Número de filas en la retícula" },
      "visible_in_modes": ["grid"]
    },
    {
      "id": "cols",
      "type": "slider",
      "default": 8,
      "min": 1,
      "max": 20,
      "step": 1,
      "label": { "en": "Cols", "es": "Cols" },
      "tooltip": { "en": "Number of columns in the grid", "es": "Número de columnas en la retícula" },
      "visible_in_modes": ["grid"]
    },
    {
      "id": "rod_extension",
      "type": "slider",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "label": { "en": "Rod Extension (mm)", "es": "Extensión Varilla (mm)" },
      "tooltip": { "en": "Rod length protruding beyond stoppers", "es": "Longitud de varilla que sobresale de los topes" },
      "description": { "en": "Protrusion beyond stoppers (0 = flush)", "es": "Protrusión más allá de los topes (0 = al ras)" },
      "visible_in_modes": ["grid"]
    }
  ],
  "estimate_constants": {
    "base_time": 5,
    "per_unit": 1.5,
    "fn_factor": 64,
    "per_part": 8
  }
}
