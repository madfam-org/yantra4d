---
import type { Translations } from '../lib/i18n';
import { STUDIO_URL } from '../lib/env';

interface Props {
  lang?: string;
  t?: Translations;
}

const { lang = 'es', t } = Astro.props;
const studioUrl = STUDIO_URL;
---


<section class="relative flex min-h-screen flex-col items-center justify-center px-6 overflow-hidden">
  <!-- Immersive Background -->
  <div class="absolute inset-0 -z-10 bg-gradient-to-b from-background via-background/90 to-background" />
  <div class="absolute inset-0 -z-20 opacity-20">
    <div class="w-full h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-primary/30 via-transparent to-transparent animate-pulse"></div>
  </div>
  
  <!-- "Vicarious" Configurator UI Mockup Background (Abstract) -->
  <div class="absolute inset-0 -z-15 flex items-center justify-center opacity-10 pointer-events-none transform scale-110">
     <div class="grid grid-cols-12 gap-4 w-full h-full max-w-7xl p-8">
        <div class="col-span-3 border border-primary/20 rounded-lg"></div>
        <div class="col-span-9 border border-primary/20 rounded-lg"></div>
     </div>
  </div>

  <div class="mx-auto max-w-5xl text-center z-10 space-y-8">
    <div class="inline-flex items-center rounded-full border border-primary/30 bg-primary/10 px-3 py-1 text-sm font-medium text-primary backdrop-blur-sm mb-4">
      <span class="flex h-2 w-2 rounded-full bg-primary mr-2 animate-pulse"></span>
      {t?.heroNew?.badge ?? 'v0.1.0 Public Beta'}
    </div>

    <h1 class="text-5xl md:text-7xl lg:text-8xl font-black tracking-tight leading-tight">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-foreground to-foreground/70">
        {t?.concepts?.hyperobjects?.heroSubtitle ?? 'Tus Diseños.'}
      </span>
      <br />
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-purple-400">
        {t?.hero?.titleLine2 ?? 'Sus Dimensiones.'}
      </span>
    </h1>

    <p class="mx-auto max-w-2xl text-xl text-muted-foreground leading-relaxed">
      {t?.hero?.subtitle ?? 'No solo diseñes objetos estáticos. Diseña Hyperobjects: configuradores paramétricos vivos que cualquiera puede adaptar, fabricar y poseer.'}
    </p>

    <div class="flex flex-col sm:flex-row items-center justify-center gap-6 pt-8">
      <a
        href="#adventure"
        class="group relative inline-flex h-12 items-center justify-center overflow-hidden rounded-md bg-primary px-8 font-medium text-primary-foreground transition-all duration-300 hover:bg-primary/90 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
      >
        <span class="mr-2">{t?.heroNew?.journeyBtn ?? 'Begin Your Journey'}</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform group-hover:translate-y-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </a>
      <a
        href={studioUrl}
        class="text-sm font-semibold leading-6 text-foreground hover:text-primary transition-colors flex items-center gap-1"
      >
        {t?.heroNew?.studioBtn ?? 'Launch Studio'} <span aria-hidden="true">→</span>
      </a>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="h-6 w-6 text-muted-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>

