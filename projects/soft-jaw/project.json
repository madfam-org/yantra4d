  "hyperobject": {
    "domain": "industrial",
    "cdg_interfaces": [
      {
        "id": "vise_bolt_pattern",
        "label": { "en": "Vise Jaw Bolt Pattern", "es": "Patrón de Pernos de Mordaza" },
        "geometry_type": "bolt_pattern",
        "standard": "Kurt Manufacturing (de facto)",
        "parameters": ["vise_standard", "bolt_size", "jaw_width"]
      },
      {
        "id": "negative_volume",
        "label": { "en": "Negative Volume (Boolean Subtract)", "es": "Volumen Negativo (Resta Booleana)" },
        "geometry_type": "boolean",
        "standard": "Geometry-as-data (OEP8)",
        "parameters": ["clamping_depth", "v_diameter"]
      }
    ],
    "material_awareness": {
      "shrinkage_compensation": true,
      "recycled_material_toggle": false,
      "tolerance_by_material": true
    },
    "societal_benefit": {
      "en": "Bridges CNC workholding gaps — any machine shop can print custom fixtures in hours instead of weeks, protecting surface finish and ensuring precise alignment.",
      "es": "Cierra brechas de sujeción CNC — cualquier taller puede imprimir fijaciones personalizadas en horas en vez de semanas, protegiendo acabados superficiales y asegurando alineación precisa."
    },
    "commons_license": "CERN-OHL-S-2.0",
    "bosl2_modules_used": ["diff", "cuboid", "cyl", "attachable", "screw_hole"],
