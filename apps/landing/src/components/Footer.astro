---
import type { Translations } from '../lib/i18n';

interface Props {
  t?: Translations;
}

const { t } = Astro.props;
const studioUrl = import.meta.env.PROD ? 'https://4d-app.madfam.io' : 'http://localhost:5173';
---

<footer class="border-t border-border py-8 px-6">
  <div class="mx-auto flex max-w-6xl flex-col items-center justify-between gap-4 sm:flex-row">
    <p class="text-sm text-muted-foreground">&copy; {new Date().getFullYear()} {t?.footer.copyright ?? 'Yantra4D. Código abierto bajo AGPLv3.'}</p>
    <nav class="flex items-center gap-4 text-sm text-muted-foreground">
      <a href="https://github.com/madfam-org/yantra4d/tree/main/docs" target="_blank" rel="noopener noreferrer" class="hover:text-foreground transition-colors">{t?.footer.docs ?? 'Docs'}</a>
      <a href={studioUrl} class="hover:text-foreground transition-colors">{t?.footer.studio ?? 'Studio'}</a>
      <a href="#gallery" class="hover:text-foreground transition-colors">{t?.footer.gallery ?? 'Galería'}</a>
      <a href="https://github.com/madfam-org/yantra4d" target="_blank" rel="noopener noreferrer" class="hover:text-foreground transition-colors">GitHub</a>
    </nav>
  </div>
</footer>
