---
import type { Translations } from '../lib/i18n';

interface Props {
  t?: Translations;
}

const { t } = Astro.props;
const studioUrl = import.meta.env.PROD ? 'https://studio.qubic.quest' : 'http://localhost:5173';
---

<section class="py-24 px-6">
  <div class="mx-auto max-w-2xl text-center">
    <h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">{t?.cta.heading ?? '¿Listo para construir?'}</h2>
    <p class="mb-8 text-muted-foreground">
      {t?.cta.subtitle ?? 'Sube tus archivos OpenSCAD y obtén un configurador paramétrico en minutos.'}
    </p>
    <a
      href={studioUrl}
      class="rounded-md bg-primary px-8 py-3 text-sm font-medium text-primary-foreground transition-colors hover:bg-primary/90"
    >
      {t?.cta.openStudio ?? 'Abrir Studio'}
    </a>
  </div>
</section>
