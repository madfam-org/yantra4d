      "values": {
        "box_length": 50,
        "box_width": 40,
        "box_height": 20
      }
    }
  ],
  "bom": [
    {
      "item": { "en": "M3 Standoff Screws", "es": "Tornillos separadores M3" },
      "qty": 4,
      "condition": "pcb_standoffs"
    },
    {
      "item": { "en": "Self-tapping Screws", "es": "Tornillos autorroscantes" },
      "qty": 4,
      "condition": "case_feet_id > 0"
    }
  ],
  "camera_views": {
    "iso": [100, 100, 60],
    "top": [0, 0, 150],
    "front": [0, -150, 0],
    "right": [150, 0, 0]
  },
  "export_formats": ["stl", "3mf"],
  "parts": [
    { "id": "enclosure", "render_mode": 0, "label": { "en": "Enclosure", "es": "Carcasa" }, "default_color": "#6366f1" }
  ],
  "estimate_constants": {
    "base_time": 8,
    "per_unit": 2,
    "per_part": 12,
    "fn_factor": 64,
    "wasm_multiplier": 4,
    "warning_threshold_seconds": 90
  }
