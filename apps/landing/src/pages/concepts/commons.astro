---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getTranslations } from '../../lib/i18n';

const lang = Astro.currentLocale || 'es';
const t = getTranslations(lang);
---

<BaseLayout
  lang={lang}
  t={t}
  title={t.concepts.commons.title + " | Yantra4D"}
  description={t.concepts.commons.description}
>
  <Header lang={lang} t={t} />
  
  <main class="pt-20">
    <section class="relative min-h-[60vh] flex items-center justify-center px-6 overflow-hidden">
      <div class="absolute inset-0 -z-10 bg-gradient-to-b from-background via-background to-green-900/10"></div>
      
      <!-- Placeholder for 3D Background Element -->
      <div class="absolute inset-0 -z-20 opacity-30">
         <div class="w-full h-full bg-[radial-gradient(circle_at_bottom_left,_var(--tw-gradient-stops))] from-green-500/20 via-transparent to-transparent"></div>
      </div>

      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-green-400 to-emerald-300 mb-6">
          {t.concepts.commons.heroTitle}
        </h1>
        <p class="text-xl md:text-2xl text-muted-foreground max-w-2xl mx-auto leading-relaxed">
          {t.concepts.commons.heroSubtitle}
        </p>
      </div>
    </section>

    <section class="max-w-5xl mx-auto px-6 py-24 space-y-24">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="space-y-6">
          <h2 class="text-3xl font-bold">{t.concepts.commons.section1Title}</h2>
          <p class="text-lg text-muted-foreground">
            {t.concepts.commons.section1Body}
          </p>
        </div>
        <div class="bg-card border border-border rounded-xl p-6 flex flex-col justify-center gap-4 bg-gradient-to-br from-card to-green-900/10">
          <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-full bg-primary/20 flex items-center justify-center text-2xl">üå±</div>
            <div>
              <h4 class="font-bold">{t.concepts.commons.forkTitle}</h4>
              <p class="text-sm text-muted-foreground">{t.concepts.commons.forkDesc}</p>
            </div>
          </div>
          <div class="flex items-center gap-4">
             <div class="h-12 w-12 rounded-full bg-primary/20 flex items-center justify-center text-2xl">‚öñÔ∏è</div>
            <div>
              <h4 class="font-bold">{t.concepts.commons.copyleftTitle}</h4>
              <p class="text-sm text-muted-foreground">{t.concepts.commons.copyleftDesc}</p>
            </div>
          </div>
          <div class="flex items-center gap-4">
             <div class="h-12 w-12 rounded-full bg-primary/20 flex items-center justify-center text-2xl">üåç</div>
            <div>
              <h4 class="font-bold">{t.concepts.commons.globalTitle}</h4>
              <p class="text-sm text-muted-foreground">{t.concepts.commons.globalDesc}</p>
            </div>
          </div>
        </div>
      </div>

       <div class="text-center space-y-8 py-12">
        <h2 class="text-3xl font-bold">{t.concepts.commons.joinTitle}</h2>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
          {t.concepts.commons.joinBody}
        </p>
        <div class="flex justify-center gap-4">
          <a href="/#gallery" class="px-8 py-4 rounded-full bg-primary text-primary-foreground font-bold hover:bg-primary/90 transition-all">
            {t.concepts.commons.browseBtn}
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer t={t} />
</BaseLayout>
