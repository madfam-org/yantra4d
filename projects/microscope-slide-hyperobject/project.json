            "hyperobject",
            "laboratory",
            "microscopy",
            "library"
        ]
    },
    "engine": "openscad",
    "modes": [
        {
            "id": "test_render",
            "label": {
                "en": "Test Bounding Box",
                "es": "Caja Delimitadora"
            },
            "description": {
                "en": "Renders a dummy array to verify slot geometry.",
                "es": "Renderiza un arreglo de prueba para verificar geometr√≠a."
            },
            "parts": [
                "test_array"
            ]
        }
    ],
    "parameters": [
        {
            "id": "slide_length",
            "type": "slider",
            "label": {
                "en": "Slide Length (mm)",
                "es": "Longitud (mm)"
