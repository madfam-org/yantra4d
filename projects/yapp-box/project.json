    {
      "name": "baseWallHeight",
      "label": { "en": "Base Wall Height", "es": "Altura de pared base" },
      "type": "slider",
      "default": 25,
      "min": 10,
      "max": 60,
      "step": 1,
      "group": "enclosure",
      "modes": ["base"]
    },
    {
      "name": "lidWallHeight",
      "label": { "en": "Lid Wall Height", "es": "Altura de pared tapa" },
      "type": "slider",
      "default": 15,
      "min": 5,
      "max": 40,
      "step": 1,
      "group": "enclosure",
      "modes": ["lid"]
