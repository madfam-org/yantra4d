{
  "project": {
    "name": "Faircap Water Filter",
    "slug": "faircap-filter",
    "version": "1.0.0",
    "description": {
      "en": "Open-source parametric water filter that screws onto standard PET bottles — clean water from plastic waste",
      "es": "Filtro de agua paramétrico de código abierto que se enrosca en botellas PET estándar — agua limpia a partir de residuos plásticos"
    },
    "thumbnail": "/projects/faircap-filter.png",
    "tags": [
      "water",
      "filter",
      "humanitarian",
      "upcycling",
      "bottle",
      "hyperobject",
      "commons",
      "cdg"
    ],
    "difficulty": "intermediate",
    "hyperobject": {
      "is_hyperobject": true,
      "domain": "household",
      "cdg_interface": "pco_1881_thread"
    }
  },
  "modes": [
    {
      "id": "Standard",
      "scad_file": "faircap.scad",
      "label": {
        "en": "Standard Filter",
        "es": "Filtro Estándar"
      },
      "parts": [
        "filter_housing"
      ],
      "estimate": {
        "base_units": 1,
        "formula": "constant"
      }
    }
  ],
  "parts": [
    {
      "id": "filter_housing",
      "render_mode": 0,
      "label": {
        "en": "Filter Housing",
        "es": "Carcasa del Filtro"
      },
      "default_color": "#06b6d4"
    }
  ],
  "presets": [
    {
      "id": "charcoal_standard",
      "label": {
        "en": "Charcoal Filter (Standard)",
        "es": "Filtro de Carbón (Estándar)"
      },
      "values": {
        "filter_type": "charcoal",
        "housing_length_mm": 80
      }
    },
    {
      "id": "ceramic_long",
      "label": {
        "en": "Ceramic Filter (Long)",
        "es": "Filtro Cerámico (Largo)"
      },
      "values": {
        "filter_type": "ceramic",
        "housing_length_mm": 120
      }
    }
  ],
  "parameters": [
    {
      "id": "filter_type",
      "type": "text",
      "default": "charcoal",
      "enum": [
        "charcoal",
        "ceramic",
        "mesh",
        "empty"
      ],
      "label": {
        "en": "Filter Media Type",
        "es": "Tipo de Medio Filtrante"
      },
      "tooltip": {
        "en": "Internal structure for filtration",
        "es": "Estructura interna para filtración"
      },
      "visible_in_modes": [
        "Standard"
      ],
      "group": "filtration"
    },
    {
      "id": "housing_od_mm",
      "type": "slider",
      "default": 40,
      "min": 30,
      "max": 60,
      "step": 1,
      "label": {
        "en": "Housing Diameter (mm)",
        "es": "Diámetro de Carcasa (mm)"
      },
      "visible_in_modes": [
        "Standard"
      ],
      "group": "dimensions"
    },
    {
      "id": "housing_length_mm",
      "type": "slider",
      "default": 80,
      "min": 40,
      "max": 150,
      "step": 5,
      "label": {
        "en": "Housing Length (mm)",
        "es": "Largo de Carcasa (mm)"
      },
      "visible_in_modes": [
        "Standard"
      ],
      "group": "dimensions"
    }
  ],
  "parameter_groups": [
    {
      "id": "filtration",
      "label": {
        "en": "Filtration Settings",
        "es": "Configuración de Filtrado"
      }
    },
    {
      "id": "dimensions",
      "label": {
        "en": "Dimensions",
        "es": "Dimensiones"
      }
    }
  ],
  "export_formats": [
    "stl",
    "3mf"
  ],
  "estimate_constants": {
    "base_time": 5,
    "per_unit": 2,
    "per_part": 8,
    "fn_factor": 32,
    "wasm_multiplier": 3,
    "warning_threshold_seconds": 60
  }
}
