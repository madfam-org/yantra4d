---
import type { Translations } from '../lib/i18n';

interface Props {
  t?: Translations;
}

const { t } = Astro.props;
const h = t?.hyperCommons;
---

<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê Section: The Parametric Commons ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<section id="hyper-commons" class="relative py-28 px-6 overflow-hidden">

  <!-- Animated background grid -->
  <div class="hc-grid-bg absolute inset-0 -z-10" aria-hidden="true"></div>
  <div class="absolute inset-0 -z-10 bg-gradient-to-b from-background via-background/80 to-background"></div>

