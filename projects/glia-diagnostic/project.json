{
  "version": "1.0.0",
  "project": {
    "slug": "glia-diagnostic",
    "name": "Glia Diagnostic Tools",
    "description": "Open source stethoscope and otoscope medical hardware",
    "authors": ["Glia Project", "Yantra4D"],
    "license": "CC-BY-SA-4.0",
    "difficulty": "intermediate",
    "hyperobject": {
      "is_hyperobject": true,
      "domain": "medical",
      "cdg_interface": "diaphragm_housing"
    }
  },
  "parameters": [

    {
      "id": "diaphragm_size_mm",
      "type": "number",
      "default": 44,
      "min": 30,
      "max": 50,
      "description": "Diameter of the stethoscope diaphragm (if applicable)"
    },
    {
      "id": "speculum_size_mm",
      "type": "number",
      "default": 4,
      "enum": [2.5, 3, 4, 5],
      "description": "Tip diameter of the otoscope speculum (if applicable)"
    },
    {
      "id": "render_mode",
      "type": "number",
      "default": 0,
      "hidden": true
    }
  ],
  "modes": [
    {
      "id": "stethoscope",
      "label": "Stethoscope",
      "scad_file": "diagnostic.scad",
      "parts": ["head"],
      "estimate": { "base_units": 1 }
    },
    {
      "id": "otoscope",
      "label": "Otoscope",
      "scad_file": "diagnostic.scad",
      "parts": ["specula"],
      "estimate": { "base_units": 1 }
    }
  ],
  "parts": [
    {
      "id": "head",
      "label": "Head",
      "render_mode": 1
    },
    {
      "id": "specula",
      "label": "Specula",
      "render_mode": 2
    }
  ]
}
