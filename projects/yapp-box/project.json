      "default": 2,
      "min": 0,
      "max": 10,
      "step": 0.5,
      "group": "padding",
      "modes": ["base", "lid"],
      "advanced": true
    },
    {
      "name": "fn",
      "label": { "en": "Resolution ($fn)", "es": "Resolución ($fn)" },
      "type": "slider",
      "default": 0,
      "min": 0,
      "max": 64,
      "step": 8,
      "group": "quality",
      "modes": ["base", "lid"]
    }
  ],
  "parameter_groups": [
    {
      "id": "pcb",
      "label": { "en": "PCB Dimensions", "es": "Dimensiones del PCB" }
    },
    {
      "id": "enclosure",
      "label": { "en": "Enclosure", "es": "Carcasa" }
    },
    {
      "id": "padding",
      "label": { "en": "Padding", "es": "Relleno" }
    },
    {
      "id": "quality",
      "label": { "en": "Quality", "es": "Calidad" }
    }
  ],
  "presets": [
    {
      "slug": "esp32_dev",
      "label": { "en": "ESP32 Dev Board", "es": "Placa ESP32 Dev" },
      "values": {
        "pcbLength": 56,
        "pcbWidth": 28,
        "baseWallHeight": 20,
        "lidWallHeight": 15,
        "standoffHeight": 3
      }
    },
    {
      "slug": "sensor_node",
      "label": { "en": "Sensor Node", "es": "Nodo Sensor" },
      "values": {
        "pcbLength": 40,
        "pcbWidth": 25,
        "baseWallHeight": 15,
        "lidWallHeight": 10
      }
    },
    {
      "slug": "display_box",
      "label": { "en": "Display Box", "es": "Caja para Display" },
      "values": {
        "pcbLength": 100,
        "pcbWidth": 60,
        "baseWallHeight": 30,
        "lidWallHeight": 20,
        "roundRadius": 5
      }
    }
  ],
  "bom": [
    {
      "item": { "en": "M3 screws", "es": "Tornillos M3" },
      "quantity_formula": "4",
      "conditional": { "en": "If using screw-mount lid option", "es": "Si se usa opción de tapa atornillada" }
    }
  ],
  "assembly_steps": [
    { "en": "Print base shell", "es": "Imprimir base" },
    { "en": "Print lid shell", "es": "Imprimir tapa" },
    { "en": "Insert PCB on standoffs", "es": "Insertar PCB en los separadores" },
    { "en": "Snap lid onto base", "es": "Encajar tapa en la base" }
  ],
  "camera_views": {
    "iso": [80, 80, 50],
    "top": [0, 0, 150],
    "front": [0, -150, 0],
    "right": [150, 0, 0]
  },
  "export_formats": ["stl", "3mf"],
  "estimate_constants": {
    "base_time": 8,
    "per_unit": 2,
    "per_part": 10,
    "fn_factor": 64,
    "wasm_multiplier": 4,
    "warning_threshold_seconds": 90
  }
