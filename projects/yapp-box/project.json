{
  "project": {
    "name": "YAPP Box Generator",
    "slug": "yapp-box",
    "version": "1.0.0",
    "description": "Yet Another Parametric Projectbox — PCB enclosure with snap-fit lid",
    "tags": ["enclosure", "electronics", "pcb", "projectbox"]
  },
  "modes": [
    {
      "slug": "base",
      "label": { "en": "Base", "es": "Base" },
      "scad_file": "qubic_yapp_base.scad",
      "parts": ["base"],
      "estimate": "base"
    },
    {
      "slug": "lid",
      "label": { "en": "Lid", "es": "Tapa" },
      "scad_file": "qubic_yapp_lid.scad",
      "parts": ["lid"],
      "estimate": "lid"
    }
  ],
  "parts": [
    {
      "id": "base",
      "label": { "en": "Base", "es": "Base" },
      "render_mode": 0,
      "color": "#3b82f6"
    },
    {
      "id": "lid",
      "label": { "en": "Lid", "es": "Tapa" },
      "render_mode": 0,
      "color": "#60a5fa"
    }
  ],
  "parameters": [
    {
      "name": "pcbLength",
      "label": { "en": "PCB Length", "es": "Largo del PCB" },
      "type": "slider",
      "default": 80,
      "min": 20,
      "max": 200,
      "step": 1,
      "group": "pcb",
      "modes": ["base", "lid"]
    },
    {
      "name": "pcbWidth",
      "label": { "en": "PCB Width", "es": "Ancho del PCB" },
      "type": "slider",
