---
import type { Translations } from '../lib/i18n';

interface Props {
  t?: Translations;
}

const { t } = Astro.props;
---

<section id="open-source" class="py-24 px-6">
  <div class="mx-auto max-w-3xl text-center">
    <h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">{t?.openSourceSection.heading ?? 'Gratis. Código Abierto. Para Siempre.'}</h2>
    <p class="mb-8 text-muted-foreground">
      {t?.openSourceSection.description ?? 'Auto-aloja, contribuye, construye encima — tus configuradores son tuyos.'}
    </p>

    <div class="flex flex-wrap items-center justify-center gap-6 mb-8">
      <div class="rounded-lg border border-border bg-card px-6 py-3">
        <div class="text-2xl font-bold">{t?.openSourceSection.statProjects ?? '20 Proyectos'}</div>
      </div>
      <div class="rounded-lg border border-border bg-card px-6 py-3">
        <div class="text-2xl font-bold">{t?.openSourceSection.statLicense ?? 'AGPLv3'}</div>
      </div>
      <div class="rounded-lg border border-border bg-card px-6 py-3">
        <div class="text-2xl font-bold">GitHub</div>
      </div>
    </div>

    <a
      href="https://github.com/madfam-org/qubic"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-2 rounded-md border border-border px-6 py-3 text-sm font-medium text-foreground transition-colors hover:bg-accent"
    >
      {t?.openSourceSection.cta ?? 'Ver en GitHub'}
    </a>

    <p class="mt-8 text-xs text-muted-foreground">
      {t?.openSourceSection.techNote ?? 'Construido con OpenSCAD, React, Three.js, Flask y WebAssembly.'}
    </p>
  </div>
</section>
